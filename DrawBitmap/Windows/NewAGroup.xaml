<loc:FatherWindow x:Class="DrawBitmap.Windows.NewAGroup"
        xmlns:loc="clr-namespace:DrawBitmap.Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewAGroup" Height="200" Width="300">
    <StackPanel>
        <DockPanel Name="titleBar" Height="45" Width="75" HorizontalAlignment="Right"></DockPanel>
        <StackPanel Width="180" Height="100">
            <DockPanel>
                <Label>群组名</Label>
                <TextBox Name="groupName">升级打宝</TextBox>
            </DockPanel>
            <DockPanel>
                    <Label>群描述</Label>
                    <TextBox Name="groupdetail">一起来玩儿啊</TextBox>
            </DockPanel>
            <Button Name="submit" Click="submit_Click">创建</Button>
        </StackPanel>
    </StackPanel>
</loc:FatherWindow>
